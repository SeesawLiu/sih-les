<?xml version="1.0"?>
<configuration>
    <log4net debug="false">
        <appender name="NHibernateFileLog" type="log4net.Appender.RollingFileAppender">
            <file value="C:\logs\WindowsService\nhibernate.txt"/>
            <appendToFile value="true"/>
            <rollingStyle value="Size"/>
            <maxSizeRollBackups value="10"/>
            <maximumFileSize value="10MB"/>
            <staticLogFileName value="true"/>
            <layout type="log4net.Layout.PatternLayout">
                <conversionPattern value="%d{yyyy-MM-dd HH:mm:ss.fff}|[%t]|%-5p|%c|%m%n"/>
            </layout>
        </appender>
        <appender name="DebugSQL" type="log4net.Appender.TraceAppender">
            <layout type="log4net.Layout.PatternLayout">
                <conversionPattern value="%date [%thread] %-5level %logger [%property{NDC}] - %message%newline"/>
            </layout>
        </appender>
        <appender name="BatchJobFileLog" type="log4net.Appender.RollingFileAppender">
            <param name="File" value="C:\logs\WindowsService\BatchJob.txt"/>
            <appendToFile value="true"/>
            <rollingStyle value="Size"/>
            <maxSizeRollBackups value="10"/>
            <maximumFileSize value="10MB"/>
            <staticLogFileName value="true"/>
            <layout type="log4net.Layout.PatternLayout">
                <conversionPattern value="%d{yyyy-MM-dd HH:mm:ss.fff}|[%t]|%-5p|%c|%m%n"/>
            </layout>
        </appender>
        <root>
            <level value="DEBUG"/>
        </root>
        <logger name="NHibernate">
            <level value="ERROR"/>
            <appender-ref ref="NHibernateFileLog"/>
        </logger>
        <logger name="NHibernate.SQL" additivity="false">
            <level value="DEBUG"/>
            <appender-ref ref="DebugSQL"/>
        </logger>
        <logger name="Log.BatchJob">
            <level value="DEBUG"/>
            <appender-ref ref="BatchJobFileLog"/>
        </logger>
    </log4net>
</configuration>
