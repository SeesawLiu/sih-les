@model com.Sconit.Entity.ORD.OrderMaster
@{
    Html.RenderAction("_SiteMapPath", "Common", new { MenuContent = "Url_OpReferenceBalance_Stock" });
}

    <fieldset>
        <div class="editor">
            <div class="search-label">
                <label>
                    <a href='/Resource/Templates/UploadTemplate/OpReferenceBalanceStock.xls'>模板下载</a>
                </label>
            </div>
            <div class="search-field">
                @(Html.Telerik().Upload()
                    .Name("attachments")
                    .Multiple(false)
                    .Async(async => async
                    .Save("ImportStockXls", "OpReferenceBalance")
                    .AutoUpload(true))
                    .ClientEvents(e => e.OnSuccess("TelerikonUpload_OnSuccess")))
            </div>
        </div>
    </fieldset>
